<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.ActivityMain">

    <ImageButton
        android:id="@+id/ib_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@android:drawable/ic_menu_camera"/>

    <Button
        android:id="@+id/activity_main_bTestCameraButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Camera"/>

    <Button
        android:id="@+id/activity_main_bTestAlgorithm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Algorithm"/>


    <Button
        android:id="@+id/activity_main_bTestImu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Imu"/>

    <Button
        android:id="@+id/activity_main_bTestTapButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Tap Button"/>


</LinearLayout>
